{
  "manifest_version": 2,
  "name": "myExtension",
  "short_name": "myExtension",
  "version": "4.1.2",
  "description": "myExtension",
  "permissions": [
    "http://*/*", 
    "https://*/*", 
    "tabs", 
    "webRequest",
    "storage"
  ],
  "browser_action": {
    "default_title": "myExtension"
  },
  "background": {
    "scripts": ["backgroundPage.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-inline' 'unsafe-eval' ; object-src 'self'; script-src-elem 'self' 'unsafe-inline'; ",
  "web_accessible_resources": ["index.html"]
}
